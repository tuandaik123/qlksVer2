@model IEnumerable<QLKS.Models.db_RoomService>

<section class="content-header">
    <div class="card">
        <div class="card-body">
            <div class="card-header">
                <h3 class="card-title" style="font-family:'Times New Roman'">Dịch vụ đã sử dụng</h3>
            </div>
            <div class="wow fadeInUp" data-wow-delay="0.2s">
                <div class="row g-2">
                    <div class="col-md-12">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Tên Dv</th>
                                        <th>Giá</th>
                                        <th>Số lượng</th>
                                        <th>Thành tiền</th>
                                        <th>Thời gian</th>
                                    </tr>
                                </thead>
                                @if (Model != null && Model.Any())
                                {
                                    <tbody>
                                        @foreach (var i in Model)
                                        {
                                            <tr>
                                                <td>@i.db_Service.ServiceName</td>
                                                <td>@Html.FormatValue(i.db_Service.Price, "{0:#,##0}")</td>
                                                <td>@i.Quantity</td>
                                                <td>
                                                    @Html.FormatValue(i.db_Service.Price*i.Quantity, "{0:#,##0}")
                                                </td>
                                                <td>@i.datetime</td>
                                            </tr>
                                        }
                                    </tbody>
                                }
                                else
                                {
                                    <tbody>
                                        <tr>
                                            <td colspan="5">Không có dịch vụ được thêm</td>
                                        </tr>
                                    </tbody>
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .table-responsive {
        overflow-y: auto;
        max-height: 200px;
    }

    .ip {
        width: 30px;
    }

    .table th,
    .table td {
        text-align: center;
        font-size: 12px;
    }

    .add-to-cart-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 6px 10px;
        font-size: 14px;
        text-align: center;
        text-decoration: none;
        cursor: pointer;
        border: none;
        background-color: #f90;
        color: #fff;
        border-radius: 50%;
    }
</style>